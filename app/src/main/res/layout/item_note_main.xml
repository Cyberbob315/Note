<?xml version="1.0" encoding="utf-8"?>
<nhannt.note.base.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title_note_item"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_big"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/tv_seperate"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_below="@+id/tv_title_note_item"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tv_content_note_item"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_below="@id/tv_seperate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tv_date_time_item" />

            <TextView
                android:id="@+id/tv_date_time_item"
                android:text="@string/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/text_size_normal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</nhannt.note.base.SquareRelativeLayout>