<?xml version="1.0" encoding="utf-8"?>
<nhannt.note.base.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_image_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/bt_delete_image_item"
        android:src="@drawable/ic_close"
        android:layout_width="@dimen/delete_photo_btn_height_width"
        android:layout_height="@dimen/delete_photo_btn_height_width"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</nhannt.note.base.SquareRelativeLayout>